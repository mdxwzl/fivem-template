{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*", "build.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./src/client/tsconfig.json" },
    { "path": "./src/server/tsconfig.json" },
    { "path": "./src/shared/tsconfig.json" }
  ]
}
